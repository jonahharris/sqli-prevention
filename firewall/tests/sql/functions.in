>>> Sada testovacich SQL dotazu: funkce
# ADDDATE
SELECT ADDDATE('2018-12-24', 31);
SELECT d, ADDDATE(d, 10) FROM t1;
SELECT d, ADDDATE(d, INTERVAL 10 HOUR) FROM t1;
# Avg
SELECT AVG(a) FROM t1;
SELECT AVG(DISTINCT a) FROM t1;
# BIT
SELECT BIT_AND(a) FROM t1;
SELECT BIT_OR(a) FROM t1;
SELECT BIT_XOR(a) FROM t1;
# Char
SELECT CHAR(49);
SELECT CHAR('49');
SELECT CHAR(0x65 USING utf8);
SELECT CHAR(77,97,114,'105',97,'68',66);
SELECT CHAR(77,77.3,'77.3');
# Charset
SELECT CHARSET(CHAR(0x65)), CHARSET(CHAR(0x65 USING utf8));
# Concat
SELECT CONCAT('Mar', 'ia', 'DB');
SELECT CONCAT(surname,', ',name) AS full_name FROM authors ORDER BY full_name;
# Count
SELECT COUNT(*) FROM student;
SELECT COUNT(name) FROM student;
# CURDATE a CURTIME
SELECT CURDATE();
SELECT CURTIME();
# Date_add a date_sub
SELECT DATE_ADD('2008-12-31 23:59:59', INTERVAL 1 SECOND);
SELECT DATE_SUB('2005-01-01', INTERVAL 1 SECOND);
SELECT DATE_ADD('2000-12-31 23:59:59', INTERVAL 1 SECOND);
SELECT DATE_ADD('2010-12-31 23:59:59', INTERVAL 1 DAY);
SELECT DATE_ADD('2100-12-31 23:59:59', INTERVAL '1:1' MINUTE_SECOND);
SELECT DATE_ADD('1900-01-01 00:00:00', INTERVAL '-1 10' DAY_HOUR);
SELECT DATE_ADD('1992-12-31 23:59:59.000002', INTERVAL '1.999999' SECOND_MICROSECOND);
SELECT DATE_SUB('1998-01-02', INTERVAL 31 DAY);
SELECT DATE_SUB('2005-01-01 00:00:00', INTERVAL '1 1:1:1' DAY_SECOND);
# Max
SELECT MAX(a) FROM t1;
SELECT MAX(DISTINCT a) FROM t1;
# Mid
SELECT MID('abcd', 4, 1);
# Min
SELECT MIN(a) FROM t1;
SELECT MIN(DISTINCT a) FROM t1;
# Now
SELECT NOW();
# Subdate
SELECT SUBDATE('2018-12-24', 31);
SELECT d, SUBDATE(d, 10) FROM t1;
SELECT d, SUBDATE(d, INTERVAL 10 HOUR) FROM t1;
# Substring
SELECT SUBSTRING('Knowledgebase',5);
SELECT SUBSTRING('MariaDB' FROM 6);
SELECT SUBSTRING('Knowledgebase',3,7);
SELECT SUBSTRING('Knowledgebase', -4);
SELECT SUBSTRING('Knowledgebase', -8, 4);
SELECT SUBSTRING('Knowledgebase' FROM -8 FOR 4);
# Sum
SELECT SUM(a) FROM t1;
SELECT SUM(DISTINCT a) FROM t1;
# Trim
SELECT TRIM('  bar   ');
SELECT TRIM(LEADING 'x' FROM 'xxxbarxxx');
SELECT TRIM(BOTH 'x' FROM 'xxxbarxxx');
SELECT TRIM(TRAILING 'xyz' FROM 'barxxyz');
# Truncate
SELECT TRUNCATE(1.223,1);
SELECT TRUNCATE(1.999,1);
SELECT TRUNCATE(1.999,0);
SELECT TRUNCATE(-1.999,1);
SELECT TRUNCATE(122,-2);
# Ostatni
SELECT AVG(score), t1.* FROM t1;
SELECT user, MAX(salary) FROM users GROUP BY user HAVING MAX(salary) > 10;
